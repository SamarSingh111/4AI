class Main {
    public static int countDigits(int input) {
        // Handle zero case
        if (input == 0) {
            return 1;  // Zero has one digit
        }
        
        // Convert negative numbers to positive
        input = Math.abs(input);
        
        // Count digits by repeatedly dividing by 10
        int count = 0;
        while (input > 0) {
            count++;
            input = input / 10;
        }
        
        return count;
    }
}
